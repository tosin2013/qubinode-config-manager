---
################################################
## Vars required for the KVM host setup playbook
## you can override any of the below values
## the defaults variables are set via vars/via qubinode_vars.yml
## vars/via qubinode_vars.yml is generated by running ./qubinode-installer -m setup

## the root dir for the inventory folder
project_dir: {{ project_dir }}

## set this to create a dedicated LVM for libvirt dir pool
kvm_host_libvirt_extra_disk: "{{ kvm_host_libvirt_extra_disk }}"
## Local to storage VM qcow disk
kvm_vm_pool_dir: "/var/lib/libvirt/images"

## Set to no prevent the installer from attempting
## setup a LVM group for qubinode. Also set this to no
## if you already have you storage for lvm setup
create_libvirt_lvm: "{{ create_libvirt_storage }}"
libvirt_images_dir: "{{ libvirt_images_dir }}"
libvirt_pool_name: "{{ libvirt_pool_name }}"

## admin user - required if configure_bash_profile is set to yes
admin_user: {{ admin_user }}

## configure admin user bash profile
configure_bash_profile: "{{ configure_bash_profile }}"

#This is for KVM host initial setup of /etc/resolv.conf
kvm_host_dns_server: {{ idm_server_ip | default('1.1.1.1') }}
kvm_bridge_type: {{ kvm_bridge_type }}
kvm_host_domain: {{ domain }}
kvm_host_bootproto: {{ kvm_host_bootproto }}

## create libvirt bridge network
configure_bridge: {{ configure_bridge }}
qubinode_bridge_name: {{ qubinode_bridge_name }}
## configure host_device
host_device: "{{ libvirt_dev }}"
vg_name: vg_qubi
create_lvm: {{ create_lvm }}


network_interface_name: "{{ network_interface_name }}"
{% if  configure_static_ip %}
## Static Networking Config
##
## Default behaviour is to use the host primary network
## interface as the bridge bridge along with the current networking
## info discovered by facts.
bridge_interface: "{{ bridge_interface }}"
qubinode_bridge_device: "{{ qubinode_bridge_device }}"
gateway_ip: "{{ gateway_ip }}"
ip_address: "{{ ip_address }}"
netmask_prefix: "{{ netmask_prefix }}"
host_netmask: "{{ host_netmask }}"
mac_address: "{{ mac_address }}"
{% endif %}
mtu: "{{ mtu }}"

